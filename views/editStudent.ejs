<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Edit Student Page</title>
  </head>
  <body>
    <h1>Edit Data Student</h1>
    <button id="btn-back" onclick="window.location='/student'">Back</button>
    <div>
      <form id="main-form" class="modal-content animate" name="mainForm" action="/student/edit/<%= data.id %>" method="post">
        <div class="container">
          <div>
            <% if(errmsg != ''){%>
                <span><%= errmsg%></span>
            <%}%>
          </div>
          <label><b>Id</b></label>
          <input type="text" name="id" value="<%= data.id %>" disabled/>
          <label><b>Name</b></label>
          <input type="text" name="name" value="<%= data.name %>" />
          <label><b>Gender</b></label>
          <input type="text" name="gender" value="<%= data.gender %>" />
          <label><b>Address</b></label>
          <input type="text" name="address" value="<%= data.address %>" />
          <label><b>Email</b></label>
          <input type="text" name="email" value="<%= data.email %>" />
          <input type="hidden" name="emailOri" value="<%= data.email %>">
          <div class="clearfix">
            <button type="submit">Submit</button>
          </div>
        </div>
      </form>
    </div>
  </body>
</html>
