<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Ini Student</title>
  </head>
  <body>
    <a href="/student"><button type="button" name="button">Student</button></a>
    <a href="/course"><button type="button" name="button">Course</button></a>
    <br><br>
    <form class="" action="/student" method="post">
      <input type="text" name="name" placeholder="Name">
      <input type="text" name="address" placeholder="Address">
      <input type="text" name="email" placeholder="Email">
      <input type="radio" name="gender" value="Perempuan" checked>Perempuan
      <input type="radio" name="gender" value="Laki-laki" class="left">Laki-laki
      <button type="submit" >Tambah</button>
    </form>
    <br>
    <table border="2" >
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Gender</th>
        <th>Address</th>
        <th>Email</th>
        <th>Option</th>
      </tr>
      <% dtStudent.forEach(dataStudent=> { %>
        <tr>
          <td><input type='checkbox' value='<%= dataStudent.id %>'/></td>
          <td><%= dataStudent.name %></td>
          <td><%= dataStudent.gender %></td>
          <td><%= dataStudent.address %></td>
          <td><%= dataStudent.email %></td>
          <td>
            <a href=""><button type="button" name="button">Details</button></a>
          </td>
        </tr>
      <% }) %>
    </table>
  </body>
</html>
