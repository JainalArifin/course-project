<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Add Course To Student</title>
  </head>
  <body>
    <h1>Add Course To Student</h1>
    <button id="btn-back" onclick="window.location='/student'">Back</button>
    <div>
      <form id="main-form" class="modal-content animate" name="mainForm" action="/student/edit/<%= data.id %>/addcourse" method="post">
        <div class="container">
          <label><b>Id</b></label>
          <input type="text" name="StudentId" value="<%= data.id %>" disabled/>
          <label><b>Nama</b></label>
          <input type="text" name="name" value="<%= data.name %>" disabled/>
          <label><b>Gender</b></label>
          <input type="text" name="gender" value="<%= data.gender %>" disabled/>
          <label><b>Address</b></label>
          <input type="text" name="address" value="<%= data.address %>" disabled=/>
          <label><b>Email</b></label>
          <input type="email" name="email" value="<%= data.email %>" disabled/>
          <label><b>Course</b></label>
          <% if(data.Course == null) { %>
            <select name="CourseId">
              <option value="">--Select Course--</option>
              <% data2.forEach((d2) => { %>
              <option value="<%= d2.id %>"><%= d2.course_name %></option>
              <% }) %>
            </select>
          <% } else {%>
            <select name="CourseId">
              <option value = "<%= data.Courses[0].StudentCourses.StudentId %>" selected="<%= data.Courses[0].StudentCourses.StudentId %>"><%= data.Courses[0].course_name %></option>
              <% data2.forEach(d2 => { %>
                <option value="<%= d2.id %>"><%= d2.course_name %></option>
              <% }) %>
            </select>
          <% } %>
          <div>
            <button type="submit">Submit</button>
          </div>
        </div>
      </form>
    </div>
  </body>
</html>
